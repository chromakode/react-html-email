{
  "name": "react-html-email",
  "description": "Create elegant HTML email templates using React.",
  "version": "0.1.0",
  "keywords": [
    "react",
    "html",
    "email"
  ],
  "license": "MIT",
  "author": {
    "name": "Max Goodman",
    "email": "c@chromakode.com"
  },
  "scripts": {
    "lint": "eslint ./examples ./scripts ./src ./test",
